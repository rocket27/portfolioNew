extends ../template

block variables
  - var title = 'Works | Vladimir Astachov'

block content
  .wrapper
    include ../common/hero
    section.section.works
      +triangleBlock('triangle__polygon_works', 'triangle__polygon_works')
      .works__title
        +title('works__sectionTitle', 'titleWorksBg', 'Мои работы')
    section.section.sliderWrapper
      .slider.container
        .slider__description
          .slider__infoBlock
            .subtitle.slider__projectName
              | Сайт школы онлайн
              br 
              | образования
            .slider__technology HTML, SCC, JavaScript
            a.slider__projectLink(href="#") Посмотреть сайт
        //- .slider__description
        //-   .slider__infoBlock
        //-     h2.subtitle.slider__projectName
        //-       each word in words
        //-         each letterArray in word
        //-           span.letterWord
        //-             each letter in letterArray
        //-               span.letter= `${letter}`
        //-     .slider__technology HTML, SCC, JavaScript
        //-     a.slider__projectLink(href="#") Посмотреть сайт
        ul.sliderFigure
          li.sliderFigure__item.sliderFigure__item_active
            img.sliderFigure__image(src="img/content/works/prjct_02.png")
          li.sliderFigure__item
            img.sliderFigure__image(src="img/content/works/prjct_03.png")
          li.sliderFigure__item
            img.sliderFigure__image(src="img/content/works/prjct_04.png")
          li.sliderFigure__item
            img.sliderFigure__image(src="img/content/works/prjct_01.png")
        .sliderControls
          .sliderControl.sliderControl_slideDown
            ul.sliderControl__list
              li.sliderControl__item.sliderControl__item_active
                img.sliderControl__image(src="img/content/works/prjct_01_min.png")
              li.sliderControl__item
                img.sliderControl__image(src="img/content/works/prjct_02_min.png")
              li.sliderControl__item
                img.sliderControl__image(src="img/content/works/prjct_03_min.png")
              li.sliderControl__item
                img.sliderControl__image(src="img/content/works/prjct_04_min.png")
            a.sliderControl__button.sliderControl__button_down(href="#")
              svg.sliderControl__buttonIcon
                use(xlink:href="img/sprite.svg#portfolioArrowDown")
          .sliderControl.sliderControl_slideUp
            ul.sliderControl__list
              li.sliderControl__item.sliderControl__item_active
                img.sliderControl__image(src="img/content/works/prjct_03_min.png")
              li.sliderControl__item
                img.sliderControl__image(src="img/content/works/prjct_04_min.png")
              li.sliderControl__item
                img.sliderControl__image(src="img/content/works/prjct_01_min.png")
              li.sliderControl__item
                img.sliderControl__image(src="img/content/works/prjct_02_min.png")
            a.sliderControl__button.sliderControl__button_up(href="#")
              svg.sliderControl__buttonIcon
                use(xlink:href="img/sprite.svg#portfolioArrowUp")
    section.section.reviews
      .reviews__container.container
        .reviews__title
          +title('reviews__sectionTitle', 'titleAboutBg', 'Что обо мне говорят')
        ul.reviewsBox
          li.reviewsBox__item
            .reviewsBox__text
              | Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
            .reviewsBox__userBlock
              .reviewsBox__userPhoto
                img.reviewsBox__image(src="img/content/works/reviewsUser_01.jpg")
              .reviewsBox__userInfo
                .reviewsBox__userName 
                  | Ковальчук Дмитрий
                .reviewsBox__position
                  | основатель Loftschool
          li.reviewsBox__item
            .reviewsBox__text
              | Этот код выдержит любые испытания. Только пожалуйста, не загружается сайт на слишком старых браузерах!
            .reviewsBox__userBlock
              .reviewsBox__userPhoto
                img.reviewsBox__image(src="img/content/works/reviewsUser_02.jpg")
              .reviewsBox__userInfo
                .reviewsBox__userName 
                  | Сабанцев Владимир
                .reviewsBox__position
                  | преподаватель
        //- ***********************************************
        .box.box_works.reviews__form
          .box__content.feedback
            .feedback__title.subtitle
              | Связаться со мной
            form.feedback__form#feedbackForm(action="#")
              input.feedback__input(type="text" placeholder="Имя")
              input.feedback__input(type="text" placeholder="Email")
              textarea.feedback__input.feedback__input_message(type="text" placeholder="Ваше сообщение")
          ul.box__menu
            li.box__menuItem
              button.box__menuButton(type="submit" form="feedbackForm") Отправить
            li.box__menuItem
              button.box__menuButton(type="reset" form="feedbackForm") Очистить
        +scrollArrow('#', 'scrollArrow_reviews')
  include ../common/footer